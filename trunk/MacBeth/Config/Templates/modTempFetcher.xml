<?xml version='1.0' encoding='utf-8'?>

<!-- Configuration file for the TempFetcher Macbeth module. -->
<modtempfetcher>

    <!-- which interval to request for a sample (in seconds) -->
    <option name="timerinterval" value="60"/>
    <!-- nr of samples to build a mean -->
    <option name="samples" value="5"/>
    <!-- log output path -->

    <!--option name="TempOutDoors.logPath" value="G:\wwwusers\sensordata\outdoors"/>

    <option name="TempInDoors.logPath" value="G:\wwwusers\sensordata\indoors"/>
    <option name="TempFreezer.logPath" value="G:\wwwusers\sensordata\freezer"/-->
    

    <!-- what nodes have sensors to probe -->
    <list name="sensornodes">
        <!--  -->
        <item>
            <field name="name" value="TempSens"/>
        </item>
        <!--  -->
        <item>
            <field name="name" value="TempSensDS1820"/>
        </item>
    </list>

    <!--  -->
    <list name="sensors">
        <!--  -->
        <item>
            <field name="name" value="Outdoors"/>
            <field name="logpath" value="G:\wwwusers\sensordata\outdoors"/>
            <field name="identbyte" value="52"/>
            <field name="printtodisplay" value="true"/>
        </item>
        <!--  -->
        <item>
            <field name="name" value="Indoors"/>
            <field name="logpath" value="G:\wwwusers\sensordata\indoors"/>
            <field name="identbyte" value="49"/>
            <field name="printtodisplay" value="false"/>
        </item>
        <!--  -->
        <item>
            <field name="name" value="Freezer"/>
            <field name="logpath" value="G:\wwwusers\sensordata\freezer"/>
            <field name="identbyte" value="48"/>
            <field name="printtodisplay" value="false"/>
        </item>
    </list>




</modtempfetcher>