<?xml version='1.0' encoding='utf-8'?>

<!-- Configuration file for the ARNE Macbeth module. -->
<modarne>

    <!-- to which comport is the ARNE PC-node connected? -->
    <option name="comport" value="COM1"/>

    <!-- Map module names to bytes -->
    <list name="modulemappings">
        <!-- module 0x50 is "RemoteControl" -->
        <item>
            <field name="name" value="RemoteControl"/>
            <field name="byte" value="80"/>
        </item>
        <!-- module 0x55 is "TempFetcher" -->
        <item>
            <field name="name" value="TempFetcher"/>
            <field name="byte" value="85"/>
        </item>
    </list>

    <!-- Map kernel names to bytes -->
    <list name="kernelmappings">
        <!-- kernel 0x00 is "self" -->
        <item>
            <field name="name" value="self"/>
            <field name="byte" value="0"/>
        </item>
    </list>

    <!-- Map node bytes to friendly names -->
    <list name="nodemappings">
        <!-- node 0x60 is "RoomControl" -->
        <item>
            <field name="name" value="RoomControl"/>
            <field name="byte" value="96"/>
        </item>
        <!-- node 0x45 is "TempSens" (Temperature and humidity) -->
        <item>
            <field name="name" value="TempSens"/>
            <field name="byte" value="69"/>
        </item>
    </list>

</modarne>