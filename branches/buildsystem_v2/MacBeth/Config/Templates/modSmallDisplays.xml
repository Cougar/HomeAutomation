<?xml version='1.0' encoding='utf-8'?>

<!-- Configuration file for SmallDisplays Macbeth module. -->
<modsmalldisplays>

    <!-- list of displays -->
    <list name="displays">
        <!-- the desktop display -->
        <item>
            <field name="target" value="DesktopDisplay"/>
            <field name="info" value="Development display, desktop"/>
            <field name="width" value="16"/>
            <field name="rows" value="2"/>
            <!-- specify startposition of first char on each row (in DECIMAL, not hex!) -->
            <field name="rowaddresses" value="0,64"/>
            <!-- specify what modules data should be written to this display -->
            <field name="users" value="TempFetcher,TVchart"/>
        </item>

    </list>

</modsmalldisplays>