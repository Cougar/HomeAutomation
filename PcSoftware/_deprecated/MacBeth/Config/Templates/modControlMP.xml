<?xml version='1.0' encoding='utf-8'?>

<!-- Configuration file for the ControlMP Macbeth module. -->
<modcontrolmp>

    <!-- How to communicate with RMP -->
    <option name="host" value="jm.csbnet.se"/>
    <option name="port" value="2050"/>

    <!-- Bind remote control buttons to functions in Remote Media Player.   -->
    <!-- Available FunctionIDs are:
        ID   - Description:
        4001 - Play
        4002 - Stop
        4003 - Pause
        4011 - Fast forward
        4012 - Rewind
        4013 - Next track
        4014 - Prev track
        4021 - Pad down
        4022 - Pad up
        4023 - Pad left
        4024 - Pad right
        4031 - Next index
        4032 - Prev index
        4033 - Place index
        4041 - End Program (if not playing) (or if inside PowerDVD: quit PowerDVD)
        4042 - ChangePlaylistMode, (or if inside PowerDVD: change subtitles)
        4043 - Show/Hide hidden files and folders (always hidden on startup)
        4044 - Toggle Fullscreen-mode
        4045 - Minimize main window
        4046 - Restore main window
        4047 - If inside PowerDVD: Title menu

        5011 - Repeat Fast forward
        5012 - Repeat Rewind
        5021 - Repeat Pad down
        5022 - Repeat Pad up
        5023 - Repeat Pad left
        5024 - Repeat Pad right
        5000 - Stop repeat (is sent automatically when button is released)
        (every button can be in fact be used with repeat, just use a 5 instead of 4, the above items is the most common used)
    -->
    <list name="RMPfunctions">
        <item>
            <field name="id" value="4001"/>
            <field name="remotebutton" value="PLAY"/>
        </item>
        <item>
            <field name="id" value="4002"/>
            <field name="remotebutton" value="STOP"/>
        </item>
        <item>
            <field name="id" value="4003"/>
            <field name="remotebutton" value="PAUSE"/>
        </item>
        <item>
            <field name="id" value="4011"/>
            <field name="remotebutton" value="CHPLUS"/>
        </item>
        <item>
            <field name="id" value="4012"/>
            <field name="remotebutton" value="CHMINUS"/>
        </item>
        <item>
            <field name="id" value="4013"/>
            <field name="remotebutton" value="NEXT"/>
        </item>
        <item>
            <field name="id" value="4014"/>
            <field name="remotebutton" value="PREVIOUS"/>
        </item>
        <item>
            <field name="id" value="5021"/>
            <field name="remotebutton" value="DOWN"/>
        </item>
        <item>
            <field name="id" value="5022"/>
            <field name="remotebutton" value="UP"/>
        </item>
        <item>
            <field name="id" value="4023"/>
            <field name="remotebutton" value="LEFT"/>
        </item>
        <item>
            <field name="id" value="4024"/>
            <field name="remotebutton" value="RIGHT"/>
        </item>
        <item>
            <field name="id" value="4044"/>
            <field name="remotebutton" value="NUMERIC0"/>
        </item>
        <item>
            <field name="id" value="4045"/>
            <field name="remotebutton" value="C"/>
        </item>
        <item>
            <field name="id" value="4046"/>
            <field name="remotebutton" value="D"/>
        </item>
        <item>
            <field name="id" value="4042"/>
            <field name="remotebutton" value="E"/>
        </item>
        <item>
            <field name="id" value="4041"/>
            <field name="remotebutton" value="REC"/>
        </item>
        <item>
            <field name="id" value="4047"/>
            <field name="remotebutton" value="F"/>
        </item>
    </list>


</modcontrolmp>